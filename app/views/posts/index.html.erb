<h1>All posts</h1>

<table>
  <tr>  
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
  </tr>
  <% @posts.each do |post| %>
   <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= post_author(post) %></td>
  </tr>
<%end%>
</table>

<br/><br/>

<%=link_to "New Post", new_post_path%>

<% if user_signed_in? %>

  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>   
<% else %>

  <%= link_to('Login', new_user_session_path) %> 
  <%= link_to('Register', new_user_registration_path) %>

<% end %>
